script.
	var myMap;

	// Дождёмся загрузки API и готовности DOM.
	ymaps.ready(init);

	function init() {
		// Создание экземпляра карты и его привязка к контейнеру с
		// заданным id ("map").
		myMap = new ymaps.Map('mapBoutique', {
			// При инициализации карты обязательно нужно указать
			// её центр и коэффициент масштабирования.
			center: [55.76, 37.64], // Москва
			zoom: 9
		}, {
			searchControlProvider: 'yandex#search'
		});

		var markers = [
			[55.684758, 37.738521],
			[55.985, 37.935],
		]

		markers.forEach((marker, index) => {
			myPlacemark = new ymaps.Placemark(marker, {
				hintContent: 'Фирменный бутик Caterina Leman',
				balloonContent: '<div class="mapTooltip"><div class="flex-wrap"><h3>ТРК «Щука», салон Caterina Leman</h3><div class="info"><p>м. Щукинская, ул. Щукинская, д. 42</p><p>Пн-Вс: 10.00 - 22.00</p></div></div><div class="choose"><button class="btn btn-primary pvz-select" type="button" data-id="53432">Выбрать</button></div></div>'
			}, {
				// Опции.
				// Необходимо указать данный тип макета.
				iconLayout: 'default#image',
				// Своё изображение иконки метки.
				//- iconImageHref: '/images/map-marker.svg',
				// Размеры метки.
				iconImageSize: [26, 26],
				// Смещение левого верхнего угла иконки относительно
				// её "ножки" (точки привязки).
				// iconImageOffset: [-50, 60]
			})

			myMap.geoObjects
				.add(myPlacemark)
		})



	}
	window.addEventListener('load', function(){

		 var date = new Date();
			// add a day
		//- date.setDate(date.getDate() + parseInt($('.js-delivery-date input').attr('data-plus-days')));
		date.setDate(date.getDate());

		$( ".js-delivery-date" ).datepicker({
			// minDate: date
			dateFormat: 'dd.mm.yy',
			firstDay: 1,
			closeText: "Закрыть",
			prevText: "Пред",
			nextText: "След",
			currentText: "Сегодня",
			monthNames: [ "Январь", "Февраль", "Март", "Апрель", "Май", "Июнь",
				"Июль", "Август", "Сентябрь", "Октябрь", "Ноябрь", "Декабрь" ],
			monthNamesShort: [ "Янв", "Фев", "Мар", "Апр", "Май", "Июн",
				"Июл", "Авг", "Сен", "Окт", "Ноя", "Дек" ],
			dayNames: [ "воскресенье", "понедельник", "вторник", "среда", "четверг", "пятница", "суббота" ],
			dayNamesShort: [ "вск", "пнд", "втр", "срд", "чтв", "птн", "сбт" ],
			dayNamesMin: [ "Вс", "Пн", "Вт", "Ср", "Чт", "Пт", "Сб" ],
			weekHeader: "Нед",
			dateFormat: "dd.mm.yy",
			firstDay: 1,
			minDate: date
		});
	})
